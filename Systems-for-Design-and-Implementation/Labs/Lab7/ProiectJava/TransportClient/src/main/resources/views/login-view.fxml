<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="transport.client.gui.LoginController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label text="Login" GridPane.columnSpan="2" style="-fx-font-size: 16;" />

            <Label text="Username:" GridPane.rowIndex="1" style="-fx-font-size: 16;" />
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 16;" />

            <Label text="Password:" GridPane.rowIndex="2" style="-fx-font-size: 16;" />
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 16;" />

            <Label fx:id="errorMessageLabel" styleClass="error-label" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-font-size: 16;" />

            <Button mnemonicParsing="false" onAction="#handleLogin" text="Login" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-font-size: 16;" />

<!--            <Button mnemonicParsing="false" onAction="#handleSignUp" text="Sign Up" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-font-size: 16;" />-->

            <Button mnemonicParsing="false" onAction="#handleExit" text="Exit" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-font-size: 16;" />
        </GridPane>
    </children>
</AnchorPane>
