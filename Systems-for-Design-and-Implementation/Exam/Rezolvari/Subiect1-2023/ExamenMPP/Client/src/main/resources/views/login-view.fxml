<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="games.client.gui.LoginController">

    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label style="-fx-font-size: 16;" text="Login" GridPane.columnSpan="2" />

            <Label style="-fx-font-size: 16;" text="Username:" GridPane.rowIndex="1" />
            <TextField fx:id="aliasField" style="-fx-font-size: 16;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label fx:id="errorMessageLabel" style="-fx-font-size: 16;" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Button mnemonicParsing="false" onAction="#handleLogin" style="-fx-font-size: 16;" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="3" />

<!--            <Button mnemonicParsing="false" onAction="#handleSignUp" text="Sign Up" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-font-size: 16;" />-->

            <Button mnemonicParsing="false" onAction="#handleExit" style="-fx-font-size: 16;" text="Exit" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        </GridPane>
    </children>
</AnchorPane>
