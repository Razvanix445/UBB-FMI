<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab7.gui.UserProfileController">

    <stylesheets>
        <URL value="@../error-label.css" />
    </stylesheets>

    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label text="Profile" GridPane.columnSpan="2" style="-fx-font-size: 16;" />

            <Label text="Last Name:" GridPane.rowIndex="1" style="-fx-font-size: 16;" />
            <TextField fx:id="numeField" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 16;" />

            <Label text="First Name:" GridPane.rowIndex="2" style="-fx-font-size: 16;" />
            <TextField fx:id="prenumeField" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 16;" />

            <Label text="Username:" GridPane.rowIndex="3" style="-fx-font-size: 16;" />
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-font-size: 16;" />

            <Label text="Password:" GridPane.rowIndex="4" style="-fx-font-size: 16;" />
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-size: 16;" />

            <Label text="Email:" GridPane.rowIndex="5" style="-fx-font-size: 16;" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5" style="-fx-font-size: 16;" />

            <Label fx:id="errorMessageLabel" styleClass="error-label" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-font-size: 16;" />

            <Button mnemonicParsing="false" onAction="#handleUpdateUser" text="Update" GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-font-size: 16;" />

            <Button mnemonicParsing="false" onAction="#handleExit" text="Exit" GridPane.rowIndex="8" GridPane.columnIndex="1" style="-fx-font-size: 16;" />
        </GridPane>
    </children>
</AnchorPane>
